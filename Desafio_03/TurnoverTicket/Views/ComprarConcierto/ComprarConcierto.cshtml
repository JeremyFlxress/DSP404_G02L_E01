@{
    ViewBag.Title = "Conciertos Disponibles";
}
<link href="~/Content/css/Global.css" rel="stylesheet" type="text/css" />
<link href="~/Content/img/ticket.png" rel="shortcut icon" type="image/x-icon" />
<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
<style>
    body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: sans-serif;
    }

    .all-content {
        display: grid;
        grid-template-columns: 250px 1fr;
        grid-template-rows: 1fr auto;
        grid-template-areas:
            "menu main-content"
            "menu footer";
        min-height: 100vh;
    }

    .main-content {
        grid-area: main-content;
        padding: 20px;
        overflow-y: auto;
    }

    .page-header {
        margin: 0; 
        padding: 20px 0; 
        text-align: center; 
    }



    .page-title {
        font-size: 2.5em;
        color: #1a1a1a;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .concerts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        padding: 20px;
    }

    .concert-card {
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        transition: transform 0.2s;
        padding: 10px;
    }

        .concert-card:hover {
            transform: translateY(-5px);
        }

    .concert-image {
        width: 100%;
        height: 200px;
        background: linear-gradient(45deg, #6c5ce7, #a855f7);
        object-fit: cover;
    }

    .concert-info {
        padding: 15px;
        text-align: center; 
    }

    .concert-title {
        font-size: 1.5em;
        margin-bottom: 10px;
        color: #333;
    }

    .concert-date {
        color: #666;
        margin-bottom: 15px;
    }

    .concert-price {
        color: #6c5ce7;
        font-weight: bold;
        font-size: 1.2em;
        margin-bottom: 15px;
    }

    .buy-button {
        background-color: #6c5ce7;
        color: white;
        padding: 8px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        float: right;
        text-decoration: none;
    }

        .buy-button:hover {
            background-color: #5b4bc4;
        }

   

    .menu__logout {
        width: 90%;
        position: absolute;
        bottom: 700px;
        display: flex;
        justify-content: center;
    }
    .menu__links {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin-top: 10%; 
    }


    .body-footer {
        grid-area: footer;
        background-color: #110452;
    }

        .body-footer p {
            color: #fff;
            text-align: center;
            padding: 10px;
            margin: 0;
        }
</style>

<div class="menu">
    <div class="menu__title">
        <h1>TurnoverTickets</h1>
        <img src="~/Content/img/ticket.png" alt="Logo de un ticket" />
    </div>
    <div class="menu__links">
        <nav>
            <ul>
                <li>
                    <img src="~/Content/img/layout-dashboard.png" alt="Icono" />
                    @Html.ActionLink("Dashboard", "ComprarConcierto", "ComprarConcierto", null, new { @class = "links", @id = "EmpleadoLink" })
                </li>
                <li>
                    <img src="~/Content/img/calendar-event.png" alt="Icono" />
                    @Html.ActionLink("Historial de Compras", "HistorialUsuario", "HistorialUsuario", null, new { @class = "links", @id = "EmpleadoLink" })
                </li>
            </ul>
            <div class="menu__logout">
                <img src="~/Content/img/logout.png" alt="Icono" />
                @Html.ActionLink("Cerrar sesión", "Login", "Login", null, new { @class = "links" })
            </div>
        </nav>
    </div>
</div>

<div class="main-content">
    <div class="page-header">
        <h1 class="page-title">Próximos Conciertos</h1>
    </div>
    <div class="concerts-grid">
        <div class="concert-card">
            <div class="concert-image"></div>
            <div class="concert-info">
                <h2 class="concert-title">Rock en Concierto 2024</h2>
                <p class="concert-date">15 de Noviembre, 2024 • 8:00 P.M</p>
                <p class="concert-price">Desde $25.00</p>
                <a href="#" class="buy-button">Comprar</a>
            </div>
        </div>
        <div class="concert-card">
            <div class="concert-image"></div>
            <div class="concert-info">
                <h2 class="concert-title">Festival de Jazz 2024</h2>
                <p class="concert-date">20 de Diciembre, 2024 • 7:00 P.M</p>
                <p class="concert-price">Desde $30.00</p>
                <a href="#" class="buy-button">Comprar</a>
            </div>
        </div>
        <div class="concert-card">
            <div class="concert-image"></div>
            <div class="concert-info">
                <h2 class="concert-title">Concierto Sinfónico</h2>
                <p class="concert-date">5 de Enero, 2025 • 6:30 P.M</p>
                <p class="concert-price">Desde $40.00</p>
                <a href="#" class="buy-button">Comprar</a>
            </div>
        </div>
        <div class="concert-card">
            <div class="concert-image"></div>
            <div class="concert-info">
                <h2 class="concert-title">Festival de Música Electrónica</h2>
                <p class="concert-date">10 de Febrero, 2025 • 9:00 P.M</p>
                <p class="concert-price">Desde $35.00</p>
                <a href="#" class="buy-button">Comprar</a>
            </div>
        </div>
    </div>
</div>

<footer class="body-footer">
    <p>&copy; @DateTime.Now.Year - TurnoverTickets | Universidad Don Bosco</p>
</footer>
