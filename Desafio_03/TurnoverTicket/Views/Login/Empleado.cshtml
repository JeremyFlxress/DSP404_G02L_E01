@{
    ViewBag.Title = "TurnoverTickets - Login";
}

<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />

<div style="display: flex; height: 100vh; width: 100%;">
    <div style="flex: 1; background-image: url('/Content/img/imagen2.jpg'); background-size: cover; background-position: center;"></div>

    <!-- Sección del formulario -->
    <div style="flex: 1; display: flex; justify-content: center; align-items: center; background-color: #fff;">
        <div style="width: 80%; max-width: 400px; text-align: center;">
            <h2 style="color: #0b0b73; margin-bottom: 15px;">Bienvenido a TurnoverTickets</h2>
            <p style="margin-bottom: 30px;">Ingresa a tu cuenta</p>

            <!-- Formulario de Login para empleados -->
            <form action="@Url.Action("Empleado", "Login")" method="post">
                <div style="margin-bottom: 20px;">
                    <input type="email" name="correo" placeholder="Correo electrónico"
                           style="width: 100%; padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 5px;" required>
                </div>

                <div style="margin-bottom: 20px;">
                    <input type="password" name="password" placeholder="Contraseña"
                           style="width: 100%; padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 5px;" required>
                </div>

                <button type="submit"
                        style="width: 100%; padding: 10px; font-size: 16px; background-color: #0b0b73;
                               color: white; border: none; border-radius: 5px; cursor: pointer;">
                    Ingresar
                </button>
            </form>

            <!-- Mostrar mensaje de error -->
            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger p-0 mt-3">
                    <p class="text-dark mb-0 p-2">@ViewBag.Error</p>
                </div>
            }
            <div style="margin-top: 30px;">
                <p>Síguenos en nuestras redes sociales</p>
                <div style="display: flex; justify-content: center; gap: 15px;">
                    <a target="_blank" href="https://www.facebook.com/"><img src="/Content/img/feis.png" width="32" alt="Facebook"></a>
                    <a target="_blank" href="https://www.instagram.com/"><img src="/Content/img/instagram.png" width="32" alt="Instagram"></a>
                    <a target="_blank" href="https://www.x.com/"><img src="/Content/img/x.png" width="32" alt="X"></a>
                </div>
            </div>
        </div>
    </div>
</div>
