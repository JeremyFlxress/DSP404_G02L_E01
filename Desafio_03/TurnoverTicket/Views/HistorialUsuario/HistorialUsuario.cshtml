@{
    ViewBag.Title = "Historial de Compras";
}
<link href="~/Content/css/Global.css" rel="stylesheet" type="text/css" />
<link href="~/Content/img/ticket.png" rel="shortcut icon" type="image/x-icon" />
<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
<div class="all-content">
    <div class="menu">
        <div class="menu__title">
            <h1>TurnoverTickets</h1>
            <img src="~/Content/img/ticket.png" alt="Logo de un ticket" />
        </div>
        <div class="menu__links">
            <nav>
                <ul>
                    <li>
                        <img src="~/Content/img/layout-dashboard.png" alt="Icono" />
                        @Html.ActionLink("Dashboard", "ComprarConcierto", "ComprarConcierto", null, new { @class = "links", @id = "EmpleadoLink" })
                    </li>
                    <li>
                        <img src="~/Content/img/calendar-event.png" alt="Icono" />
                        @Html.ActionLink("Historial de Compras", "HistorialUsuario", "HistorialUsuario", null, new { @class = "links", @id = "EmpleadoLink" })
                    </li>
                </ul>
                <div class="menu__logout">
                    <img src="~/Content/img/logout.png" alt="Icono" />
                    @Html.ActionLink("Cerrar sesión", "Login", "Login", null, new { @class = "links" })
                </div>
            </nav>
        </div>
    </div>

    <div class="main-content">
        <div class="page-header">
            <h1 class="page-title">Historial de Compras</h1>
        </div>
        <div class="concerts-grid">
            <div class="purchase-card">
                <div class="purchase-header">
                    <span class="purchase-title">Rock en Concierto 2024</span>
                    <span class="purchase-status">Completado</span>
                </div>
                <div class="purchase-date">
                    Comprado el 1 de Octubre, 2024
                </div>
                <div class="purchase-details">
                    <div class="purchase-item">
                        <span>2x Entrada VIP</span>
                        <span>$200.00</span>
                    </div>
                    <div class="purchase-item">

                    </div>
                    <div class="purchase-total">
                        <span>Total</span>
                        <span>$200.00</span>
                    </div>
                </div>
                <a href="#" class="view-details">Ver Detalles</a>
            </div>
            <div class="purchase-card">
                <div class="purchase-header">
                    <span class="purchase-title">Festival de Jazz 2024</span>
                    <span class="purchase-status">Completado</span>
                </div>
                <div class="purchase-date">
                    Comprado el 15 de Septiembre, 2024
                </div>
                <div class="purchase-details">
                    <div class="purchase-item">
                        <span>3x Entrada General</span>
                        <span>$90.00</span>
                    </div>
                    <div class="purchase-item">

                    </div>
                    <div class="purchase-total">
                        <span>Total</span>
                        <span>$90.00</span>
                    </div>
                </div>
                <a href="#" class="view-details">Ver Detalles</a>
            </div>
            <div class="purchase-card">
                <div class="purchase-header">
                    <span class="purchase-title">Concierto Sinfónico</span>
                    <span class="purchase-status">Completado</span>
                </div>
                <div class="purchase-date">
                    Comprado el 5 de Agosto, 2024
                </div>
                <div class="purchase-details">
                    <div class="purchase-item">
                        <span>2x Entrada Premium</span>
                        <span>$160.00</span>
                    </div>
                    <div class="purchase-item">

                    </div>
                    <div class="purchase-total">
                        <span>Total</span>
                        <span>$160.00</span>
                    </div>
                </div>
                <a href="#" class="view-details">Ver Detalles</a>
            </div>
            <div class="purchase-card">
                <div class="purchase-header">
                    <span class="purchase-title">Festival de Música Electrónica</span>
                    <span class="purchase-status">Completado</span>
                </div>
                <div class="purchase-date">
                    Comprado el 20 de Julio, 2024
                </div>
                <div class="purchase-details">
                    <div class="purchase-item">
                        <span>4x Entrada VIP</span>
                        <span>$280.00</span>
                    </div>
                    <div class="purchase-item">

                    </div>
                    <div class="purchase-total">
                        <span>Total</span>
                        <span>$280.00</span>
                    </div>
                </div>
                <a href="#" class="view-details">Ver Detalles</a>
            </div>
        </div>
    </div>

    <footer class="body-footer">
        <p>&copy; @DateTime.Now.Year - TurnoverTickets | Universidad Don Bosco</p>
    </footer>
 </div>